<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryDarkColor" />
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/primaryDarkColor" android:endColor="@color/primaryTextColor" android:angle="45" />
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="@color/white" />
        </shape>
    </item>
</selector>
