<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.form.FormContacts">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_detail_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_detail_name_hint"
        android:autofillHints=""
        android:inputType="text"
        android:enabled="true"
        tools:ignore="TextFields" />

    <!-- Fecha de nacimiento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_detail_dateOfBirth"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_detail_dateOfBirth_hint"
        android:inputType="date"
        android:autofillHints="" />

    <!-- Color preferido -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_detail_favorite_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etFavouriteColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_detail_favorite_color_hint"
        android:autofillHints=""
        android:inputType=""
        tools:ignore="TextFields" />


    <!-- Ciudad favorita -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_detail_favorite_city"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etFavoriteCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_detail_favorite_city_hint"
        android:autofillHints=""
        android:inputType=""
        tools:ignore="TextFields" />

    <!-- Número favorito -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_detail_favorite_number"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etFavoriteNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_detail_favorite_number_hint"
        android:inputType="number"
        android:autofillHints="" />

    <!-- Localización actual -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actual_location"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/etLatitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/etLongitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnMapFavoriteCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Favorite City on Map"
        android:layout_marginTop="16dp" />
</LinearLayout>
